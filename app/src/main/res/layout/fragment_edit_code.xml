<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_fon_na_fragment_lite"
    tools:context=".fragments.EditCodeFragment"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Авторизцаия"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/TextView_autentification1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите ваш логин и пароль"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_marginTop="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/image_autentification2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/user"
        app:layout_constraintBottom_toBottomOf="@id/autentificationCodeLogin"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/autentificationCodeLogin" />

    <ImageView
        android:id="@+id/image_autentification1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/zamok"
        app:layout_constraintBottom_toBottomOf="@id/autentificationCodePassword"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/autentificationCodePassword" />

    <EditText
        android:id="@+id/autentificationCodeLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Логин"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView_autentification1"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="16dp"
       />
    <EditText
        android:id="@+id/autentificationCodePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autentificationCodeLogin"
        android:maxLines="1"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:hint="Пароль"
        tools:ignore="MissingConstraints" />

    <Button

        android:id="@+id/StartRegistry"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/megaoval_anim"
        android:text=" Регистрация "
        android:textAllCaps="false"
        android:textColor="@color/Grey"
        android:textSize="17dp"
        android:textStyle="normal"
        android:layout_marginEnd="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autentificationCodePassword"
         />

    <Button

        android:id="@+id/StartOffline"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/megaoval_anim"
        android:text=" Offline mode "
        android:textColor="@color/Grey"
        android:textSize="17dp"
        android:textAllCaps="false"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginStart="160dp"
        app:layout_constraintTop_toBottomOf="@id/autentificationCodePassword"
        />



    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/button_next1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_button_next"
        android:windowSoftInputMode="stateVisible|adjustResize"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>