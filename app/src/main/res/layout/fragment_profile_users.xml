<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileUsers"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/LoginTextInProfie"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:text="Логин - "
                android:textSize="25dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NameTextInProfie"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/ocenka_4islo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="25dp"
                app:layout_constraintStart_toEndOf="@+id/ocenka"
               app:layout_constraintTop_toBottomOf="@id/count_recept_for_user" />

            <TextView
                android:id="@+id/count_recept_for_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Кол-во рецептов: "
                android:textSize="25dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LoginTextInProfie" />

            <TextView
                android:id="@+id/ocenka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Средняя оценка: "
             android:layout_marginStart="16dp"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/count_recept_for_user" />

            <Button
                android:id="@+id/EditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Редактировать профиль"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ocenka"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/ImageViewInProfile"
                android:layout_width="245dp"
                android:layout_height="245dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/user"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/NameTextInProfie"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:text="Имя - "
                android:textSize="25dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ImageViewInProfile" />

            <TextView
                android:id="@+id/NameInProfile"
                android:layout_width="wrap_content"
                android:layout_height="30dp"

                android:layout_marginTop="30dp"
                android:textSize="25dp"
                app:layout_constraintStart_toEndOf="@+id/NameTextInProfie"
                app:layout_constraintTop_toBottomOf="@+id/ImageViewInProfile" />

            <TextView
                android:id="@+id/LoginInProfile"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/NameInProfile"
               android:layout_marginTop="16dp"
                android:textSize="25dp"
                app:layout_constraintStart_toEndOf="@+id/LoginTextInProfie"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="351dp" />

            <TextView
                android:id="@+id/count_recept_for_user_4islo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/LoginInProfile"


                android:textSize="25dp"
                app:layout_constraintStart_toEndOf="@+id/count_recept_for_user"
                tools:layout_editor_absoluteY="397dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>