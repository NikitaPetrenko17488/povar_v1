<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.fragment3">




            <ImageView
                android:id="@+id/ImageUpdateRecept"
               android:layout_marginStart="26dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="110dp"
                android:layout_width="110dp"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                android:src="@drawable/recept"
                />
            <EditText
                android:id="@+id/EditTextNameUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:hint="Название блюда *"
                app:layout_constraintTop_toTopOf="parent"
                android:maxLines="1"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/ImageUpdateRecept"

                />

    <EditText
        android:id="@+id/EditTextIngridientUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Ингридиенты"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ImageUpdateRecept" />

            <EditText
                android:id="@+id/EditTextFormulaUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Рецепт *"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/EditTextIngridientUpdate"

                />




                <Button
                    app:layout_constraintTop_toBottomOf="@id/EditTextFormulaUpdate"
                    android:id="@+id/button_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fon_button"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Изменить" />





</androidx.constraintlayout.widget.ConstraintLayout>



