<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CONSTRAINT_FRAGMENT"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="@drawable/fon_na_fragment"
    tools:context=".fragments.fragment5"
    tools:ignore="MissingDefaultResource">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_marginTop="56dp"
                android:id="@+id/addMyRecept"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Добавить рецепт"
                android:gravity="center"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@null"
                />





            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recicle_view_recept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:listitem="@layout/list_item_recept">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/ToastNoRecepts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:layout_marginTop="26dp"
                android:textSize="30dp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>