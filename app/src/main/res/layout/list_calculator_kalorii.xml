<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/TextNameIngridients"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:text="Название ингридиента : "
        />
    <TextView
        android:id="@+id/EditNameIngridients"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:hint="Название"
        app:layout_constraintTop_toTopOf="@id/TextNameIngridients"
        app:layout_constraintBottom_toBottomOf="@id/TextNameIngridients"
        app:layout_constraintStart_toEndOf="@id/TextNameIngridients"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/TextKaloriiGramm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/TextNameIngridients"
        android:textSize="15dp"
        android:text="Ккал : "
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"

        />
    <TextView
        android:id="@+id/EditKaloriiGramm"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/black"
       app:layout_constraintTop_toTopOf="@id/TextKaloriiGramm"
        app:layout_constraintBottom_toBottomOf="@id/TextKaloriiGramm"
       app:layout_constraintStart_toEndOf="@id/TextKaloriiGramm"
        android:layout_marginStart="8dp"
        android:hint="000 Ккл"
        />

    <TextView
        android:id="@+id/TextGramm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/TextKaloriiGramm"
        app:layout_constraintBottom_toBottomOf="@id/TextKaloriiGramm"
        app:layout_constraintStart_toEndOf="@id/EditKaloriiGramm"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:text="Кол-во грамм: "
        />
    <TextView
        android:id="@+id/EditGramm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/TextGramm"
        app:layout_constraintStart_toEndOf="@id/TextGramm"
        android:hint="000 грамм"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginStart="1dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/TextGramm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>