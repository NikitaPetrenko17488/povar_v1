<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="16dp"
    android:id="@+id/kek"
    android:layout_alignParentRight="true"
    >

    <ImageView
        android:layout_marginTop="25dp"
        android:id="@+id/image_src"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/recept"
        tools:ignore="MissingConstraints" />

    <TextView
        app:layout_constraintEnd_toStartOf="@id/editReceptItem"
        android:id="@+id/name_recept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/title"
        android:textSize="30dp"
        android:layout_marginEnd="106dp"
        android:layout_marginStart="106dp"
        app:layout_constraintStart_toEndOf="@id/image_src"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/formula_recept"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginTop="16dp"
        android:text="@string/description"
        android:textSize="19dp"

        app:layout_constraintStart_toEndOf="@id/image_src"
        app:layout_constraintTop_toBottomOf="@id/name_recept"
        tools:ignore="MissingConstraints" />

    <Button

        android:id="@+id/ViewRecept"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginTop="16dp"
        android:gravity="start|bottom"
        android:text="Посмотреть рецепт.."
        android:textSize="18dp"
        android:textColor="@color/Grey"
        android:background="@null"
        app:layout_constraintStart_toEndOf="@id/image_src"
        app:layout_constraintTop_toBottomOf="@id/formula_recept"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/editReceptItem"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit"
        app:layout_constraintEnd_toStartOf="@id/delitteReceptItem"
        app:layout_constraintTop_toBottomOf="@id/image_src"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/delitteReceptItem"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:src="@drawable/dellete"
        android:background="@drawable/dellete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>