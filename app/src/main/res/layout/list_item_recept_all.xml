<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="16dp"
    android:id="@+id/Constraint_layout_all"
    android:layout_alignParentRight="true"
    >

    <ImageView
        android:layout_marginTop="25dp"
        android:id="@+id/image_src_All"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/recept"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/name_recept_All"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginTop="25dp"
        android:text="@string/title"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@id/image_src_All"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/formula_recept_All"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginTop="16dp"
        android:text="@string/description"
        android:textSize="19dp"

        app:layout_constraintStart_toEndOf="@id/image_src_All"
        app:layout_constraintTop_toBottomOf="@id/name_recept_All"
        tools:ignore="MissingConstraints" />

    <Button

        android:id="@+id/ViewRecept_All"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginTop="16dp"
        android:gravity="start|bottom"
        android:text="Посмотреть рецепт.."
        android:textSize="18dp"
        android:textColor="@color/Grey"
        android:background="@null"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/image_src_All"
        app:layout_constraintTop_toBottomOf="@id/formula_recept_All"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>