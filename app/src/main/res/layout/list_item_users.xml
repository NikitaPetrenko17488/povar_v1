<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >



    <Button
        android:id="@+id/buttonGlaz"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       android:layout_marginStart="126dp"
        android:layout_height="35dp"
        android:layout_width="wrap_content"
        android:text="Посмотреть"


        />

    <Button
        android:id="@+id/buttonDelite"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
       android:layout_marginEnd="16dp"
        android:layout_marginTop="65dp"
        android:text="Удалить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonGlaz"


        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/imageViewUsersForAdmin"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
       />

    <TextView
        android:id="@+id/textViewNameForAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="206dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewUsersForAdmin"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonGlaz"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/textViewNamePodskazka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginTop="10dp"
        android:text="Имя - "
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewUsersForAdmin"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonGlaz"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewLoginForAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="206dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewUsersForAdmin"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewNameForAdmin"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/textViewLoginPodskazka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginTop="16dp"
        android:text="Login - "
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewUsersForAdmin"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewNameForAdmin"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>